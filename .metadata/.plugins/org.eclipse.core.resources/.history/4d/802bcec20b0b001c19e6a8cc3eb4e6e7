package Intro;

import java.util.Scanner;

public class ByteLandianCoins {

	public static void main(String[] args) {
		Scanner s= new Scanner(System.in);
		
		int n= s.nextInt();
		int ans= byteLandCoins(n);

	}

	//recursive solution
	private static int byteLandCoins(int n) {
		if(n==1) {
			return 1;
		}
		
		if(n==0) {
			return 0;
		}
		
		int x=Integer.MIN_VALUE,y=Integer.MIN_VALUE,z=Integer.MIN_VALUE;
		
		if(n%2==0) {
			x=byteLandCoins(n/2);
		}
		
		if(n%3==0) {
			y=byteLandCoins(n/3);
		}
		
		if(n%4==0) {
			z=byteLandCoins(n/4);
		}
		
		return Math.max(Math.max(y, Math.max(x, n)), z);
	}

}
